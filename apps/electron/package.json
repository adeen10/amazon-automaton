{
  "name": "amazon-automaton-electron",
  "version": "1.0.0",
  "description": "Amazon Automaton Electron App",
  "main": "main.js",
  "type": "commonjs",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run dev:vite\" \"wait-on http://localhost:5173 && electron . --dev\"",
    "dev:vite": "vite",
    "dev:electron": "electron . --dev",
    "dev:simple": "vite & timeout 5 && electron . --dev",
    "build": "vite build && electron-builder",
    "dist": "electron-builder --publish=never"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "node-fetch": "^2.7.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-icons": "^5.5.0",
    "react-toastify": "^11.0.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^4.7.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "eslint": "^9.32.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "terser": "^5.43.1",
    "vite": "^7.1.0",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.amazonautomaton.app",
    "productName": "Amazon Automaton",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer/**/*"
    ],
    "extraResources": [],
    "compression": "maximum",
    "removePackageScripts": true,
    "removePackageKeywords": true,
    "mac": {
      "category": "public.app-category.productivity",
      "target": "dmg"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "target": "AppImage"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
